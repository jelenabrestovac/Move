<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="232dp"
        android:layout_height="95dp"
        android:fontFamily="casual"
        android:text="Move!"
        android:textColor="@color/material_dynamic_primary20"
        android:textSize="75"
        android:textStyle="bold"

        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="54dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dobrodošli!"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="142dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prijavi se"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="190dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prijava"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="427dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="246dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="272dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lozinka"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="327dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koristi društvene mreže"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="508dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="554dp" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="554dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="135dp"
        android:layout_height="64dp"
        android:text="Registriraj se"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="643dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="176dp"
        android:layout_height="66dp"
        android:text="Zaboravljena lozinka?"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="641dp" />
</androidx.constraintlayout.widget.ConstraintLayout>